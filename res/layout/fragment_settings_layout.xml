<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:rowCount="9"
    android:columnCount="2"
    android:padding="10dp"
    >
	<!-- Row 0 , Col 0 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center"
        android:layout_row="0"
        android:text="Service:"
        android:textSize="22sp" />
    
    <!-- Row 1 , Col 0 -->
    <TextView
        android:id="@+id/service_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        
        android:layout_gravity="left|center"
        android:layout_marginBottom="20dp"
        android:layout_row="1"
        android:text="unknown"
        android:textColor="@color/light_blue"
        android:textSize="18sp" />

    <!-- Row 0 , Col 1 -->
    
    <ImageView
        android:id="@+id/service_button"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_height="55dp"
        android:layout_width="55dp"
        android:layout_gravity="center|center"
        android:src="@drawable/power_offstate"
        android:layout_marginLeft="10dp"
		android:layout_rowSpan="2"
        />
    

    
	<!-- Row 2 , Col 0 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center"
        android:layout_row="2"
        android:text="BT Connection:"
        android:textSize="22sp" />

    <!-- Row 3 , Col 0 -->
    
    <TextView
        android:id="@+id/bt_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center"
        android:layout_marginBottom="20dp"
        android:layout_row="3"
        android:text="unknown"
        
        android:textColor="@color/light_blue"
        android:textSize="18sp" />
    
    <!-- Row 2 , Col 1 -->
    
    <ImageView
        android:id="@+id/bt_button"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:layout_height="55dp"
        android:layout_width="55dp"
        android:layout_gravity="center|center"
        android:src="@drawable/power_offstate" 
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />
    
    
    <!-- Row 4, Col 0  -->
    <TextView
         android:id="@+id/bt_connected_with_label"
		 android:layout_row="4"
		 android:layout_column="0"
         android:text="Connected with:"
         android:textSize="22sp" 
         />
    
    <!-- Row 5, Col 0  -->

        <TextView
            android:id="@+id/bt_connected_with"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20dp"
            android:layout_row="5"
            android:text="unknown"
            android:textColor="@color/light_blue"
            android:textSize="18sp" />
    
    <!-- Row 6, Col 0  -->
    <TextView 
        android:text="Server Battery State:"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:textSize="18sp"
        android:paddingTop="10dp"
        
        android:layout_marginBottom="0dp"
        />
    
    <!-- Row 6, Col 1  -->
    

    <ImageView
        android:id="@+id/battery_status"
        android:layout_column="1"
        android:layout_row="6"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_gravity="left|bottom"
        android:src="@drawable/battery1"
         
        android:layout_marginBottom="0dp"
        />    
    
    <!-- Row 7, Col 1  -->
	    <TextView 
	    android:id="@+id/batteryPercentage"
        android:text="\\?%"
        android:layout_row="7"
        android:layout_column="1"
        android:paddingLeft="10dp"
        android:layout_gravity="left|top"
        android:textSize="10sp"
        android:paddingTop="0dp"
        
        android:layout_marginBottom="0dp"
        />
	    
	   <!-- Row 8, Col 1+2  -->

	    <TextView
	        android:id="@+id/notificationText"
	        android:layout_width="231dp"
	        android:layout_height="wrap_content"
	        android:layout_column="0"
	        android:layout_columnSpan="2"
	        android:layout_gravity="left|top"
	        android:layout_marginBottom="0dp"
	        android:layout_marginTop="20dp"
	        android:layout_row="8"
	        android:paddingLeft="20dp"
	        android:textColor="@color/notify"
	        android:textSize="18sp" />
    
</GridLayout>