<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:rowCount="5"
    android:columnCount="4"
    android:padding="10dp"
    >
	<!-- Row 0  -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center"
        android:layout_row="0"
        android:text="Service:"
        android:layout_marginBottom="20dp"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/service_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center|center"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:text="unknown"
        android:textColor="@color/light_blue"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/service_button"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_gravity="right|center"
        android:src="@drawable/power_offstate"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        />
    
    <!--  dummy column -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_row="0"
            android:text=" " />
    
	<!-- Row 1  -->
    <TextView
         android:id="@+id/bt_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center"
        android:layout_marginBottom="5dp"
        android:layout_row="1"
        android:text="BT Connection:"
        android:textSize="18sp" />
    

        <TextView
	        android:layout_column="1"
    	    android:layout_gravity="center|center"
        	android:layout_marginBottom="5dp"
        	android:layout_row="1"
        	android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    

    
    <ImageView
        android:id="@+id/bt_button"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_gravity="right|center"
        android:src="@drawable/power_offstate" 
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />
    
    
    <!-- Row 2  -->
    <TextView
         android:id="@+id/bt_connected_with_label"
		 android:layout_row="2"
		 android:layout_column="0"
         android:text="Connected with:"
         android:textSize="14sp" 
         android:layout_marginBottom="20dp"
         android:layout_marginLeft="20dp"
         />
    
        <TextView
            android:id="@+id/bt_connected_with"
            android:layout_width="80dp"
            android:layout_height="43dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_row="2"
            android:text="unknown"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />
    
	<!-- Row 3  -->
    <TextView 
        android:text="Server Battery State:"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:layout_columnSpan="2"
        
        android:layout_marginBottom="0dp"
        />
    


    <ImageView
        android:id="@+id/battery_status"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_gravity="right|top"
        android:src="@drawable/battery1"
         
        android:layout_marginBottom="0dp"
        />    
    
	<!-- Row 4  -->
	    <TextView 
	    android:id="@+id/batteryPercentage"
        android:text="100%"
        android:layout_row="4"
        android:layout_column="2"
        android:paddingLeft="10dp"
        android:layout_gravity="center|top"
        android:textSize="10sp"
        android:paddingTop="0dp"
        
        android:layout_marginBottom="0dp"
        />
    
</GridLayout>